<%- include ('partials/header') %>


<form class="form-signin mt-5 mb-5" action="/registerUser" method="post">
      <div class="text-center mb-4">
        <h1>Book Notes.</h1>
      </div>
      
      <div id="toast-container">
      </div>
        <div class="form-label-group pt-3">
        <input type="text" name="firstname" class="form-control d-block" placeholder="First Name" required autofocus>
      </div>
        <div class="form-label-group pt-3">
        <input type="text" name="lastname" class="form-control d-block" placeholder="Last Name" required autofocus>
      </div>
      <div class="form-label-group pt-3">
        <input type="email" name="inputEmail" class="form-control d-block" placeholder="Email address" required autofocus>
      </div>

      <div class="form-label-group pt-3">
        <input type="password" name="inputPassword" class="form-control" placeholder="Password" required minlength="8">
      </div>
      <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Sign Up</button>
      <p>Already Signed up? <a href="/login">Log In</a> </p>
    </form>
   
<%- include ('partials/footer')%>